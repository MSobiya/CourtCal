<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_weight="1"
            android:background="@drawable/background_gradient"
            android:contentDescription="@string/todo" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:contentDescription="@string/todo" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutinput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_gradient_front"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:padding="20dp"
        android:orientation="vertical">

        <TextView
            android:layout_marginTop="1dp"
            android:textSize="20sp"
            android:text="YOUR ID:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/etId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawablePadding="25dp"
            android:drawableRight="@drawable/ic_person"
            android:hint="ENTER YOUR ID" />

        <TextView
            android:layout_marginTop="5dp"
            android:textSize="20sp"
            android:text="PASSWORD:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/etPas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawablePadding="25dp"
            android:drawableRight="@drawable/ic_vpn_key"
            android:hint="ENTER PASSWORD"
            android:inputType="textPassword"/>

        <RadioGroup
            android:id="@+id/roleRG"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/courtRole"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Court"
                android:textSize="18sp"/>

            <RadioButton
                android:id="@+id/judgeRole"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Judge"
                android:textSize="18sp"/>

            <RadioButton
                android:id="@+id/lawyerRole"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lawyer"
                android:textSize="18sp"/>
        </RadioGroup>


        <Button
            android:textColor="#fff"
            android:background="@drawable/rec_gradient"
            android:id="@+id/login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="LOGIN"
            android:elevation="100dp"
            android:textAllCaps="false"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"/>


        <Button
            android:textColor="#fff"
            android:background="@drawable/rec_gradient_signup"
            android:id="@+id/signup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SIGNUP"
            android:elevation="100dp"
            android:textAllCaps="false"
            android:layout_marginBottom="10dp"/>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="40sp"
        android:layout_marginBottom="10dp"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/layoutinput"
        android:text="Log In"/>

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="156dp"
        android:layout_marginLeft="156dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="154dp"
        android:layout_marginRight="154dp"
        android:layout_marginBottom="620dp"
        android:src="@drawable/court" />

</RelativeLayout>